FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

options
{
    energySource
    {
        type            fixedTemperatureConstraint;
        active          yes;
        selectionMode   cellSet;
        cellSet         ignition;
        mode            uniform;      // uniform or lookup
        temperature     constant 1000; // uniform option
        
        // For lookup option
        // T            <Tname>;      // optional temperature field name
    }
    
    
    limitT
    {
        type            limitTemperature;
        active          yes;

        selectionMode   all;
        min             290;
        max             2800;
    }
}


