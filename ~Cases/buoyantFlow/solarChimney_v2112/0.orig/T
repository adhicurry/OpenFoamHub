FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            inletOutlet;
        inletValue      uniform 300;
        value           uniform 300;
    }
    outlet
    {
        type            zeroGradient;
    }
    glass
    {
        type            zeroGradient;
    }
    heaterTop
    {
        type            externalWallHeatFluxTemperature;
        value           uniform 300;

        q               uniform 1000;
        kappaMethod     fluidThermo;
        mode            flux;
    }
    heaterSides
    {
        type            zeroGradient;
    }
    side
    {
        type            zeroGradient;
    }
    ground
    {
        type            zeroGradient;
    }
    chimney
    {
        type            zeroGradient;
    }
    symmetry1
    {
        type            symmetry;
    }
    symmetry2
    {
        type            symmetry;
    }
}


