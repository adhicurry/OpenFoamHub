#!/bin/gnuplot
#
# Tobias Holzmann
# 12.02.2022
#
# Description
#   This script plots the postProcessing data
#
#------------------------------------------------------------------------------

set grid
set xlabel 'Time (s)'
set terminal pngcairo enhanced size 1248,1024


set output 'inletOutletFlux.png'
set ylabel 'Flux (kg/s)'
plot \
"postProcessing/inletFlux/0/surfaceFieldValue.dat" using 1:2 w l t 'Inlet', \
"postProcessing/outletFlux/0/surfaceFieldValue.dat" using 1:2 w l t 'Outlet'


set output 'massInDomainAndTemperature.png'
set ylabel 'Mass in Domain (kg)'
set y2tics 
set y2label 'Average Domain Temperature (Â°C)'
plot \
"postProcessing/massInDomain/0/volFieldValue.dat" using 1:2 w l t 'Mass', \
"postProcessing/averageTemperature/0/volFieldValue.dat" using 1:($2-273.15) w l t 'Temperature' axis x1y2



#------------------------------------------------------------------------------
