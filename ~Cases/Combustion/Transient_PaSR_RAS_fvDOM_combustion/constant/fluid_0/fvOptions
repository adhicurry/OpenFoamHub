FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

options
{
    energySource
    {
        type            scalarSemiImplicitSource;
        timeStart       0.25;
        duration        7;
        selectionMode   cellSet;
        cellSet         ignition;
        volumeMode      specific;

        injectionRateSuSp
        {
            h          (5e6 0); // kg/m/s^3
        }
    }
	

    HeatLoss3D
    {
        type            scalarSemiImplicitSource;
        selectionMode   all;
        volumeMode      specific;   //Or specific ?
        active          yes;
        
        sources
        {
            h
            {
                explicit
                {
                    type        exprField;
                    expression  "(7.738E-5 * pow(T, 3.0) + -0.28776 * pow(T, 2.0) + -78.706 * T + 47765)"; //kg*m/s^3 (Watts) #VERIFY UNITS FOR SPECIFIC OR ABSOLUTE
                }
            }
        }
    }	

    limitT
    {
        type            limitTemperature;
        active          yes;

        selectionMode   all;
        min             290;
        max             2800;
    }

}	









