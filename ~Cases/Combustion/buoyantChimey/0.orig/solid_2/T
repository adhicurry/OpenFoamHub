FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"
    
    walls-solid_2
    {
        type            externalWallHeatFluxTemperature;
        kappaMethod     solidThermo;
        mode            coefficient;
        h               uniform 2.5;
        Ta              uniform 300;
        value           $internalField;
    }

    "solid_2_to_.*"
    {
        type            compressible::turbulentTemperatureRadCoupledMixed;
        Tnbr            T;
        kappaMethod     solidThermo;
        kappa           none;
        value           $internalField;
    }
	
    frontAndBackPlanes
    {
        type            empty;
    }

    "proc.*"
    {
        type            processor;
    }
    
    "symmetry.*" 
    {
        type            symmetry;
    }   
}


