FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     chtMultiRegionFoam;

startFrom       latestTime; //latestTime

startTime       latestTime; //latestTime

stopAt          endTime;

endTime         0.01;

deltaT          1e-5;

writeControl    adjustable;

writeInterval   0.001;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

maxCo           10;

maxDi           1;

adjustTimeStep  yes;

functions
{
    #include    "probes"
    turbulenceFields
    {
        // Mandatory entries (unmodifiable)
        type            turbulenceFields;
        libs            (fieldFunctionObjects);

        // Mandatory entries (runtime modifiable)
        // Either field or fields entries
        fields          (R devRhoReff epsilon omega);

        // Optional (inherited) entries
        region          fluid_0;
        enabled         false;
        log             false;
        timeStart       0;
        timeEnd         $endTime;
        executeControl  timeStep;
        executeInterval 10;
        writeControl    timeStep;
        writeInterval   10;
    }		
}

// ************************************************************************* //


