probesFluid
{
    type            probes;
    libs            (sampling);
    writeControl    timeStep;
    writeInterval   1;
    interpolationScheme cell;
    region          fluid_0;
    log             true;
    verbose         true;

    fields          (p p_rgh U T);

    probeLocations
    (
        (0 0 0)
		(0 0.001 0.001)
    );
}

